@import 'utils/fonts.styl'
@import 'utils/vars.styl'
@import 'utils/mixins.styl'
@import 'libs.styl'

html
	font-size baseFontSize
	height 100%
	line-height 1.3
	color: #00206e

body
	font-family $mainFont
	height 100%

h1,h2,h3,h4,h5,h6
	margin 0

ul,li
	list-style-type none
	margin 0
	padding 0

p
	margin 0

a
	color inherit
	text-decoration none

audio,
canvas,
iframe,
img,
svg,
video
	vertical-align middle

img, picture
	max-width: 100%
	max-height: 100%

textarea
	resize none

section
	position relative

input,
select,
button
	outline none
	background: none
	box-shadow: none


*, *:before, *:after
	box-sizing border-box

.wrapper
	display flex
	flex-direction column
	height 100%

.content
	flex 1 0 auto

.container
	max-width: 1260px
	margin: 0 auto
	padding: 0 16px

	@media $tablet
		padding: 0 31px

	@media $desktop
		padding: 0 42px

	&_pl
		padding-top: 40px

		@media $tablet
			padding-left: 246px

		@media $desktop
			padding-left: 342px

	&_page
		padding-top: 40px

.page

	@media $tablet
		display: flex
		width: 100%
		padding-bottom: 36px

	@media $desktop
		padding-bottom: 80px

	&__main

		@media $tablet
			flex-grow: 1

	&__sidebar

		@media $tablet
			width: 216px
			margin-left: 30px

		@media $desktop
			width: 270px

			
.stop-scroll
	overflow: hidden

.popup
	display: none
	position: fixed
	top: 0
	left: 0
	right: 0
	bottom: 0
	overflow-y: auto

	&__overlay
		background-color: alpha(#00206E, .5)
		height: 100%
		width: 100%
		position: relative
		padding: 16px

	&__content
		min-width: 290px
		background-color: #ffffff
		border-radius: 5px
		padding: 27px 20px 40px
		position: absolute
		top: 50%
		left: 50%
		transform: translate(-50%, -50%)

		@media $tablet
			min-width: 630px
			padding: 22px 30px 30px

	&__close
		display: block
		position: absolute
		top: 30px
		right: 20px
		width: 20px
		height: 20px
		background-image: url('../img/svg/close-blue.svg')
		background-repeat: no-repeat
		background-size: cover
		cursor: pointer

		@media $tablet
			right: 30px
			width: 24px
			height: 24px


	&__heading
		margin-bottom: 24px

		text-transform: uppercase
		font-size: 20px
		line-height: 27px
		font-weight: 700

		@media $tablet
			margin-bottom: 30px

			font-size: 32px
			line-height: 38px

.popup-feedback

	.form

		@media $tablet
			display: flex
			flex-wrap: wrap
			align-items: center


	.input
		width: 100%
		margin-bottom: 10px
		border-radius: 15px
		padding: 10px 17px

		font-size: 14px
		line-height: 14px
		font-weight: 400

		@media $tablet
			margin-bottom: 15px

			font-size: 16px
			line-height: 19px

		&::placeholder
			color: #0090d0

		&:focus
			color: #00206E
			border-color: #00206E

			&::placeholder
				color: #00206E

		&_phone

			@media $tablet
				width: calc(50% - 15px)
				margin-right: 30px

		&_email
			display: none

			@media $tablet
				display: block
				width: calc(50% - 15px)

	.checkbox
		margin-bottom: 10px

		@media $tablet
			max-width: 500px

		label
			display: block
			padding-left: 34px

			font-size: 12px
			line-height: 14px

			&::after
				top: 0
				transform: none

	textarea
		height: 105px

	.required
		display: block
		padding-left: 34px
		margin-bottom: 20px

		font-size: 12px
		line-height: 14px

		@media $tablet
			margin-bottom: 0
			padding-left: 0
			order: 2

	.btn
		display: block
		padding: 6px 14px 7px 14px
		min-width: 154px
		margin: 0 auto

		font-size: 16px
		font-weight: 400

		@media $tablet
			min-width: 170px
			margin-left: 0
			margin-right: 30px

		&::before
			content: none

