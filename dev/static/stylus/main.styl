@import 'utils/fonts.styl'
@import 'utils/vars.styl'
@import 'utils/mixins.styl'
@import 'libs.styl'

html
	font-size baseFontSize
	height 100%
	line-height 1.3

body
	font-family $mainFont
	height 100%

h1,h2,h3,h4,h5,h6
	margin 0

ul,li
	list-style-type none
	margin 0
	padding 0

p
	margin 0

a
	color inherit
	text-decoration none

audio,
canvas,
iframe,
img,
svg,
video
	vertical-align middle

img, picture
	max-width: 100%
	max-height: 100%

textarea
	resize none

section
	position relative

input,
select,
button
	outline none
	background: none
	box-shadow: none


*, *:before, *:after
	box-sizing border-box

.wrapper
	display flex
	flex-direction column
	height 100%

.content
	flex 1 0 auto

.container
	max-width: 1260px
	margin: 0 auto
	padding: 0 16px

	@media $tablet
		padding: 0 31px

	@media $desktop
		padding: 0 42px

	&_pl
		padding-top: 40px

		@media $tablet
			padding-left: 246px

		@media $desktop
			padding-left: 342px

	&_page
		padding-top: 40px

.page

	@media $tablet
		display: flex
		width: 100%
		padding-bottom: 36px

	@media $desktop
		padding-bottom: 80px

	&__main

		@media $tablet
			flex-grow: 1

	&__sidebar

		@media $tablet
			width: 216px
			margin-left: 30px

		@media $desktop
			width: 270px


@import 'common.styl'

