.contacts

  &__main

    @media $tablet
      display: flex
      padding-bottom: 36px

    @media $desktop
      padding-bottom: 80px

  &__text

    @media $tablet
      flex-shrink: 0
      width: 185px
      margin-right: 30px

    @media $desktop
      width: 270px


  &__list
    margin-bottom: 8px

    @media $tablet
      margin-bottom: 10px

    @media $desktop
      margin-bottom: 20px

  &__item
    margin-bottom: 8px

    @media $desktop
      margin-bottom: 20px

    &:last-child
      margin-bottom: 0

  &__text
    font-size: 14px
    line-height: 17px

    @media $desktop
      font-size: 16px
      line-height: 19px

  &__title
    margin-bottom: 4px

    font-weight: bold
    color: #0090d0

    @media $desktop
      margin-bottom: 8px


  &__value
    color: #00206e
    font-weight: normal


  &__socials
    margin-bottom: 24px

    .socials

      &__list
        display: flex

      &__item
        width: 24px
        height: 24px
        margin-right: 20px
        background-repeat: no-repeat
        background-size: contain

        &:last-child
          margin-right: 0

        &_whatsapp
          background-image: url('../img/svg/whatsapp-dark.svg')

        &_instagram
          background-image: url('../img/svg/instagram-dark.svg')

        &_youtube
          background-image: url('../img/svg/youtube-dark.svg')

        a
          display: block
          height: 100%
          width: 100%

  &__map
    margin: 0 -16px
    height: 225px

    @media $tablet
      margin: 0
      height: 325px
      flex-grow: 1
      border-radius: 10px
      overflow: hidden

    @media $desktop
      height: 400px

    img
      width: 100%
      height: 100%
      object-fit: cover
