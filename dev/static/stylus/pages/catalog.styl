.catalog

  .container_pl

    @media $tablet
      padding-left: 275px

    @media $desktop
      padding-left: 339px

  &__main

    @media $tablet
      display: flex

  &__content

    @media $tablet
      flex-grow: 1


  &__top
    display: flex
    justify-content: space-between
    padding: 9px 0
    margin-bottom: 23px
    border-top: 1px solid #00acec
    border-bottom: 1px solid #00acec

    @media $tablet
      margin-bottom: 14px
      padding: 0
      border-top: none
      border-bottom: none


  &__subheading
    display: none

    @media $tablet
      display: block
      font-size: 12px
      line-height: 14px

  &__filter-mobile
    display: block
    width: 16px
    height: 13px
    background-repeat: no-repeat
    background-position: center center
    background-size: cover
    background-image: url('../img/svg/filter.svg')

    @media $tablet
      display: none

  &__sort
    display: flex
    align-items: center

  .sort

    &__direction
      margin-right: 8px

      label
        display: block
        width: 14px
        height: 12px
        background-repeat: no-repeat
        background-position: center center
        background-size: cover
        background-image: url('../img/svg/sort-direction.svg')
        transition: 0.3s all ease
        cursor: pointer

      input
        display: none

        &:checked + label
          transform: rotate(180deg)

  &__list
    display: grid
    grid-template-columns: 1fr 1fr
    grid-gap: 21px 16px
    margin-bottom: 34px

    @media $tablet
      grid-gap: 30px

    @media $desktop
      grid-template-columns: 1fr 1fr 1fr
      grid-gap: 40px 31px

  &__filter

    @media $tablet
      width: 216px
      margin-right: 30px

    @media $desktop
      width: 269px
      flex-shrink: 0

.product-card
  display: flex
  flex-direction: column
  height: 100%
  padding: 8px
  background-color: #ffffff
  border-radius: 8px

  font-size: 12px
  line-height: 14px

  @media $tablet
    padding: 20px

  &_new
    position: relative

    &::after
      content: ''
      display: block
      width: 52px
      height: 52px
      position: absolute
      top: 10px
      right: 10px
      background-repeat: no-repeat
      background-position: center center
      background-size: cover
      background-image: url('../img/svg/product-card-new.svg')


  &:hover
    box-shadow: 10px 10px 10px 00 #0000001A

  &__img
    margin-bottom: 6px
    text-align: center

    @media $tablet
      margin-bottom: 10px

    @media $desktop
      margin-bottom: 26px

  &__firm
    margin-bottom: 8px

    color: #0090d0

    @media $tablet
      margin-bottom: 4px

    @media $desktop
      margin-bottom: 3px

      font-size: 14px
      line-height: 17px

  &__name
    margin-bottom: 8px

    @media $tablet
      margin-bottom: 10px

    @media $desktop
      font-size: 18px
      line-height: 22px

  &__bottom
    display: flex
    flex-grow: 1
    justify-content: space-between
    align-items: flex-end

  &__btn

    .btn
      padding: 4px 14px 4px 6px

      font-size: 8px
      line-height: 8px

      @media $tablet
        font-weight: normal
        font-size: 12px
        line-height: 14px

      @media $desktop
        padding: 7px 24px 6px 16px

        font-size: 14px
        line-height: 17px

      &::before
        top: 3px
        right: 3px

        @media $tablet
          top: 6px

        @media $desktop
          top: 10px
          right: 10px

.filter
  display: none

  position: fixed
  top: 0
  left: 0
  right: 0
  bottom: 0
  z-index: 4

  @media $tablet
    display: block !important
    position: static
    z-index: unset

  &__overlay
    background-color: alpha(#00206E, .5)
    height: 100%
    width: 100%
    position: relative
    padding: 16px

    @media $tablet
      background-color: transparent
      padding: 0
      position: static

  &__wrap
    background-color: #fff
    width: 100%
    height: 100%
    overflow: auto
    position: relative
    top: 50%
    left: 0
    transform: translateY(-50%)
    padding: 14px 16px
    border-radius: 15px

    @media $tablet
      position: static
      padding: 0
      overflow: unset
      border-radius: 0
      height: auto
      transform: none


  &__close
    display: block
    position: absolute
    width: 20px
    height: 20px
    top: 16px
    right: 16px
    background-image: url('../img/svg/close-blue.svg')
    background-repeat: no-repeat
    background-size: cover
    cursor: pointer

    @media $tablet
      display: none

  &__heading
    display: flex
    align-items: center
    padding-bottom: 12px
    border-bottom: 1px solid alpha(#00acec, 0.3)

    font-size: 18px
    line-height: 22px
    text-transform: uppercase
    font-weight: bold

    &::after
      @extend .catalog__filter-mobile
      content: ''
      display: block
      margin-left: 10px

  &__param
    padding: 12px 0 14px
    border-bottom: 1px solid alpha(#00acec, 0.3)

    &_opened


      .filter__title::after
        transform: translateY(-50%) rotate(0deg)

  &__title
    position: relative
    cursor: pointer

    font-weight: bold
    font-size: 18px
    line-height: 22px

    &::after
      content: ''
      display: block
      width: 13px
      height: 7px
      position: absolute
      right: 0
      top: calc(50% - 2px)
      transform: translateY(-50%) rotate(180deg)
      background: url('../img/svg/select-arrow.svg') no-repeat right center / cover
      transition: all .27s ease-in-out

  &__values
    display: none
    padding-top: 19px

    .checkbox
      margin-bottom: 8px

  &__range
    display: flex
    align-items: center

    .input
      width: 45px
      margin: 0 8px

      text-align: center

      &_big
        width: 56px
        padding: 8px 11px

  &__btns
    margin-top: 15px
    display: flex
    justify-content: center

    @media $tablet
      justify-content: space-between

    @media $desktop
      margin-top: 29px

    .btn
      cursor: pointer
      padding: 9px 17px 8px
      margin-right: 16px

      font-size: 16px
      line-height: 19px
      font-weight: normal
      text-transform: none
      text-align: center

      @media $tablet
        margin-right: 0

      &::before
        display: none

      &:last-child
        margin-right: 0



