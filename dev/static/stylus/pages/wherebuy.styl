.wherebuy

  .container_pl

    @media $tablet
      padding-left: 265px

    @media $desktop
      padding-left: 359px

  &__list
    margin-bottom: 36px

    @media $tablet
      margin-bottom: 0
      padding-right: 10px

  &__item
    padding: 7px 10px
    font-size: 12px
    line-height: 14px

    @media $desktop
      font-size: 16px
      line-height: 19px

    &:nth-child(even)
      background-color: alpha(#0090D0, 0.05)

  &__name
    margin-bottom: 10px

    font-weight: bold

    @media $desktop
      margin-bottom: 6px

  &__address
    margin-bottom: 8px

    @media $desktop
      margin-bottom: 6px

  &__hours
    margin-bottom: 8px

    @media $desktop
      margin-bottom: 6px

  &__phone

    a
      position: relative
      padding-left: 19px

      &::before
        content: ''
        display: block
        position: absolute
        top: 50%
        transform: translateY(-50%)
        left: 0
        background-image: url('../img/svg/phone-wherebuy.svg')
        background-repeat: no-repeat
        background-position: center center
        background-size: cover
        width: 11px
        height: 11px

  .contacts

    &__text


      @media $tablet
        width: 216px
        margin-right: 15px
        height: 469px

        overflow-y: auto
        // For FF
        scrollbar-width thin
        scrollbar-height thin
        scrollbar-color #00206E #f3f3f3

        @media $desktop
          width: 285px
          height: 570px
          margin-right: 30px

        // For other
        &::-webkit-scrollbar
          width: 8px
          height: 8px

          @media $desktop
            width: 10px
            height: 10px

          &-track
            background #f3f3f3
            border-radius: 10px

          &-thumb
            background: #00206E
            border-radius: 10px


    &__map
      display: none

      @media $tablet
        display: block
        height: 469px

      @media $desktop
        height: 570px







