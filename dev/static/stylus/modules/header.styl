.header
  display: flex
  justify-content: space-between
  align-items: center
  position: relative
  background-color: $baseBlue
  min-height: 40px
  padding: 0 16px 0 110px

  @media $tablet
    min-height: 50px
    padding: 0 30px 0 250px


  &__logo
    height: 97px
    width: 107px
    position: absolute
    top: -22px
    left: 15px

    @media $tablet
      height: 134px
      width: 120px
      top: -25px
      left: 65px

    a
      display: block
      height: 100%
      background-repeat: no-repeat
      background-size: contain
      background-image: url('../img/svg/logo.svg')


  .search

    &__input
      position: relative
      width: 157px

      @media $tablet
        width: 268px

      input
        width: 100%
        border-radius: 40px
        border: 1px solid $blue
        padding: 4px 15px 4px 25px

        font-size: 12px
        line-height: 14px

        @media $tablet
          padding: 5px 15px 7px 40px

          font-size: 14px
          line-height: 16px
          letter-spacing: -0.2px

        &::placeholder
          color: $blue

      &::before
        content: ''
        display: block
        width: 14px
        height: 14px
        background-image: url('../img/svg/search.svg')
        background-repeat: no-repeat
        background-size: cover
        position: absolute
        top: 6px
        left: 9px

        @media $tablet
          top: 8px
          left: 10px



    &__submit
      display: none


  .burger

    label
      display: block
      width: 25px
      height: 16px
      background-repeat: no-repeat
      background-size: contain
      background-image: url('../img/svg/menu.svg')

      @media $tablet
        width: 36px
        height: 23px


    input
      display: none

      &:checked + label
        width: 19px
        height: 19px
        background-image: url('../img/svg/close.svg')

        @media $tablet
          width: 29px
          height: 29px






