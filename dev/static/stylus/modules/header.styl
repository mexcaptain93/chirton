.header
  display: flex
  justify-content: space-between
  align-items: center
  position: relative
  background-color: $baseBlue
  min-height: 40px
  padding: 0 16px 0 110px

  @media $tablet
    min-height: 50px
    padding: 0 30px 0 250px


  &__logo
    position: absolute
    height: 107px
    width: 97px
    top: -27px
    left: 10px

    @media $tablet
      height: 144px
      width: 135px
      top: -32px
      left: 57px

    a
      display: block
      height: 100%
      background-repeat: no-repeat
      background-size: contain
      background-image: url('../img/svg/logo-shadow.svg')

  .search

    &__input
      position: relative
      width: 157px

      @media $tablet
        width: 268px

      input
        width: 100%
        border-radius: 40px
        border: 1px solid $blue
        padding: 4px 15px 4px 25px

        font-size: 12px
        line-height: 14px

        @media $tablet
          padding: 5px 15px 7px 40px

          font-size: 14px
          line-height: 16px
          letter-spacing: -0.2px

        &::placeholder
          color: $blue

      &::before
        content: ''
        display: block
        width: 14px
        height: 14px
        background-image: url('../img/svg/search.svg')
        background-repeat: no-repeat
        background-size: cover
        position: absolute
        top: 6px
        left: 9px

        @media $tablet
          top: 8px
          left: 10px



    &__submit
      display: none


  .burger

    @media $desktop
      display: none

    label
      display: block
      width: 25px
      height: 16px
      background-repeat: no-repeat
      background-size: contain
      background-image: url('../img/svg/menu.svg')

      @media $tablet
        width: 36px
        height: 23px


    input
      display: none

      &:checked + label
        width: 19px
        height: 19px
        background-image: url('../img/svg/close.svg')

        @media $tablet
          width: 29px
          height: 29px

  .lang-switcher
    display: none

    @media $tablet
      display: block

    @media $desktop
      display: none

    &__list
      display: flex

    &__item
      font-size: 16px
      color: $white
      text-transform: uppercase

      label
        position: relative
        cursor: pointer
        margin-right: 8px

        &::after
          content: '/'
          position: absolute
          right: -7px
          padding: 0 1px
          font-weight: 400

      input
        display: none

        &:checked + label
          position: relative
          font-weight: 700

          &::before
            content: ''
            display: block
            position: absolute
            bottom: -2px
            left: 0
            right: 0
            height: 1px
            background-color: $white

      &:last-child

        label

          &::after
            content: ''









