.header
  position: relative
  z-index: 3

  &__top
    background-color: #00206E
    height: 40px

    font-size: 16px
    color: $white

    @media $tablet
      height: 50px

  &__bottom
    display: none
    height: 52px

    color: #00206e

    @media $desktop
      display: block
      box-shadow: 0 4px 4px rgba(0, 0, 0, 0.05)

    .header__container

      @media $desktop
        padding-left: 323px

  &__container
    display: flex
    justify-content: space-between
    align-items: center
    position: relative
    height: 100%
    padding: 0 16px 0 110px
    margin: 0 auto

    @media $tablet
      padding: 0 30px 0 250px

    @media $desktop
      padding: 0 42px 0 342px
      max-width: 1260px


  &__logo
    position: absolute
    height: 107px
    width: 97px
    top: -27px
    left: 10px

    @media $tablet
      height: 144px
      width: 135px
      top: -32px
      left: 57px

    @media $desktop
      width: 245px
      height: 256px

    a
      display: block
      height: 100%
      background-repeat: no-repeat
      background-size: contain
      background-image: url('../img/svg/logo-shadow.svg')

  &__contacts
    display: none

    @media $desktop
      display: flex

  &__email
    position: relative
    margin-right: 40px
    padding-left: 20px

    font-size: 18px

    &::before
      content: ''
      display: block
      position: absolute
      top: 7px
      left: 0
      width: 14px
      height: 13px
      background-repeat: no-repeat
      background-size: contain
      background-image: url('../img/svg/email.svg')


  &__phone
    position: relative
    padding-left: 20px

    &::before
      content: ''
      display: block
      position: absolute
      top: 4px
      left: 0
      width: 18px
      height: 14px
      background-repeat: no-repeat
      background-size: contain
      background-image: url('../img/svg/phone.svg')


  .search

    &__input
      position: relative
      width: 157px

      @media $tablet
        width: 268px

      input
        width: 100%
        border-radius: 15px
        border: 1px solid #00ACEC
        padding: 4px 15px 4px 25px

        font-size: 12px
        line-height: 14px
        color: #00ACEC

        @media $tablet
          padding: 5px 15px 7px 40px

          font-size: 14px
          line-height: 16px
          letter-spacing: -0.2px

        &::placeholder
          color: #00ACEC

        &:focus
          background: white
          color: #00206E


        &.opened

          background: white

          color: #00206E

          @media $tablet
            border-bottom-right-radius: 0
            border-bottom-left-radius: 0
            border-bottom: none

          & + .hint

            @media $tablet
              display: block

      .hint
        display: none
        position: absolute
        overflow: hidden
        z-index: 10
        top: 100%
        left: 0
        right: 0
        background-color: #ffffff
        border: 1px solid #00ACEC
        border-top: none
        border-bottom-right-radius: 15px
        border-bottom-left-radius: 15px

        &__item
          display: flex
          align-items: center
          padding: 7px 10px

          &:hover
            background-color: alpha(#00ACEC, 0.1)

        &__img
          width: 64px
          height: 44px
          margin-right: 9px

          img
            width: 100%
            height: 100%
            object-fit: cover
            object-position: center

        &__name
          margin-bottom: 3px

          font-size: 11px
          line-height: 13px
          color: #00206e
          text-transform: uppercase

        &__type
          font-size: 9px
          line-height: 11px
          color: #0090d0

        &__count
          margin-top: 6px
          margin-bottom: 6px

          color: #00206e
          font-size: 9px
          line-height: 11px
          text-align: center

        &__more
          display: block
          background-color: #00acec
          padding: 10px 0

          font-size: 9px
          line-height: 11px
          font-weight: 700
          text-align: center
          text-transform: uppercase

      &::before
        content: ''
        display: block
        width: 14px
        height: 14px
        background-image: url('../img/svg/search.svg')
        background-repeat: no-repeat
        background-size: cover
        position: absolute
        top: 6px
        left: 9px

        @media $tablet
          top: 8px
          left: 10px



    &__submit
      display: none


  .burger

    @media $desktop
      display: none

    label
      display: block
      width: 25px
      height: 16px
      background-repeat: no-repeat
      background-size: contain
      background-image: url('../img/svg/menu.svg')

      @media $tablet
        width: 36px
        height: 23px


    input
      display: none

      &:checked + label
        width: 19px
        height: 19px
        background-image: url('../img/svg/close.svg')

        @media $tablet
          width: 29px
          height: 29px



  .lang-switcher

    &__list
      display: flex

    &__item
      text-transform: uppercase

      label
        position: relative
        cursor: pointer
        margin-right: 8px

        &::after
          content: '/'
          position: absolute
          right: -7px
          padding: 0 1px
          font-weight: 400

      input
        display: none

        &:checked + label
          position: relative
          font-weight: 700

          &::before
            content: ''
            display: block
            position: absolute
            bottom: -2px
            left: 0
            right: 0
            height: 1px
            background-color: $white

      &:last-child

        label
          margin-right: 0

          &::after
            content: ''

  &__lang-switcher-top
    display: none

    @media $tablet
      display: block

    @media $desktop
      display: none

  &__lang-switcher-bottom
    display: none

    @media $desktop
      display: block
      margin-left: 28px

    .lang-switcher__item input:checked + label::before
      background-color: #00206e

  .header-menu
    flex-grow: 1

    &__list
      display: flex
      justify-content: space-between

    &__item

      font-size: 16px
      text-transform: uppercase
      text-align: center

      a
        display: block
        width: 100%
        height: 100%
        padding: 14px 16px 17px 19px

        &:hover
          padding: 14px 16px 17px 19px
          background-color: alpha(#00acec, 0.1)
          font-weight: 700
          letter-spacing: -0.2px








