.footer
  flex 0 0 auto
  padding: 24px 0 36px
  background-color: #00206E

  font-size: 14px
  line-height: 19px
  text-align: center
  color: #ffffff
  font-weight: 300

  @media $tablet
    text-align: left

  .container

    @media $tablet
      display: flex
      justify-content: center
      padding: 0 30px

  &__block

    &:first-child

      @media $tablet
        width: 191px
        margin-right: 55px

    &:nth-child(2)

      @media $tablet
        width: 246px

    &:last-child

      @media $tablet
        width: 218px

  .production
    margin-bottom: 16px



    &__heading
      margin-bottom: 12px

      font-weight: 700
      font-size: 16px
      line-height: 19px
      text-transform: uppercase

      @media $tablet
        margin-bottom: 16px

    &__item
      line-height: 17px
      margin-bottom: 4px

      @media $tablet
        margin-bottom: 6px

  .footer-menu
    display: flex
    flex-direction: column
    margin-bottom: 16px

    font-weight: 700
    font-size: 16px
    line-height: 19px
    text-transform: uppercase

    @media $tablet
      margin-bottom: 30px

    &__item
      margin-bottom: 16px

      &:last-child
        margin-bottom: 0

  .socials

    @media $tablet
      display: none

    &_tablet
      display: none

      @media $tablet
        display: block

        .socials

          &__list
            justify-content: flex-start

    &__list
      display: flex
      justify-content: center

    &__item
      width: 24px
      height: 24px
      margin-right: 20px
      background-repeat: no-repeat
      background-size: contain

      &:last-child
        margin-right: 0

      &_whatsapp
        background-image: url('../img/svg/whatsapp.svg')

      &_instagram
        background-image: url('../img/svg/instagram.svg')

      &_youtube
        background-image: url('../img/svg/youtube.svg')

      a
        display: block
        height: 100%
        width: 100%

  .contacts

    &__heading
      margin-bottom: 16px

      font-weight: 700
      font-size: 16px
      line-height: 19px
      text-transform: uppercase

      @media $tablet
        margin-bottom: 12px

    &__phone
      margin-bottom: 16px

      a
        position: relative
        padding-left: 22px

        &::before
          content: ''
          position: absolute
          top: 2px
          left: 1px
          display: block
          width: 18px
          height: 14px
          background-repeat: no-repeat
          background-size: contain
          background-image: url('../img/svg/phone.svg')

    &__email
      margin-bottom: 16px

      a
        position: relative
        padding-left: 22px

        &::before
          content: ''
          position: absolute
          top: 4px
          left: 0
          display: block
          width: 14px
          height: 13px
          background-repeat: no-repeat
          background-size: contain
          background-image: url('../img/svg/email.svg')

    &__address
      position: relative
      max-width: 204px
      margin: 0 auto 16px

      @media $tablet
        margin: 0 0 22px

      a
        position: relative
        display: block
        padding-left: 33px

        text-align: left
        letter-spacing: 0.2px

        @media $tablet
          padding-left: 21px

      &::before
        content: ''
        position: absolute
        top: 3px
        left: 13px
        display: block
        width: 13px
        height: 13px
        background-repeat: no-repeat
        background-size: contain
        background-image: url('../img/svg/pin.svg')

        @media $tablet
          left: -2px

    &__feedback-btn
      margin-bottom: 16px

      .btn
        padding: 6px 15px 7px 16px

        font-size: 16px
        font-weight: 400

        &::before
          content: none
